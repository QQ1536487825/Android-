<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="login"
            type="com.example.loginphone.login.LoginViewModel" />
    </data>

    <LinearLayout
        android:orientation="vertical"
        android:background="#f0f5f5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.login.LoginActivity">

        <RelativeLayout
            android:layout_marginTop="50dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_log"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:background="@drawable/ic_base" />

            <ImageView
                android:layout_below="@+id/iv_log"
                android:layout_marginTop="20dp"
                android:layout_centerInParent="true"
                app:srcCompat="@drawable/ic_font"
                android:layout_width="80dp"
                android:layout_height="30dp" />
        </RelativeLayout>

        <LinearLayout
            android:padding="20dp"
            android:layout_marginTop="44dp"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="320dp"
            android:layout_height="wrap_content">

            <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                android:id="@+id/et_phone"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:inputType="phone"
                app:prefix="+86"
                android:maxLength="11"
                android:hint="@{login.phone}"
                android:textSize="15sp"
                android:background="@color/white" />

            <LinearLayout
                android:layout_marginTop="23dp"
                android:orientation="horizontal"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                    android:id="@+id/et_ver"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="@{login.verifyCode}"
                    android:inputType="phone"
                    android:textSize="15sp" />

                <View
                    android:layout_width="1dip"
                    android:layout_height="26dp"
                    android:background="@color/colorPrimaryDark"
                    android:layout_gravity="center" />



                <TextView
                    android:id="@+id/tv_ver"
                    android:layout_width="120dp"
                    android:layout_alignParentRight="true"
                    android:text="   获取验证码"
                    android:textSize="15sp"
                 android:onClick="send"
                    android:gravity="center"
                    android:layout_height="50dp"
                    android:background="@drawable/edit_bg" />

            </LinearLayout>

            <ImageButton
                android:id="@+id/btn_login"
                android:layout_marginTop="63dp"
                app:srcCompat="@drawable/login_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="loginPhone"
                android:background="@null" />


